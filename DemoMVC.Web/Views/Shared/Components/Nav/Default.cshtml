@model IEnumerable<string>

@Html.ActionLink("Home", "GetProducts", "Demo"
                       , new { page = 1}
                       , new { @class = "btn btn-block" + 
                       (ViewBag.CurrentCategory == null ? " btn-primary": "")
                })

@foreach (var category in @Model)
{
    @Html.RouteLink(category, new {
        controller = "Demo",
        action = "GetProducts",
        category = category,
        page = 1
    }, new { @class = "btn btn-block m-1" + 
             (category == ViewBag.CurrentCategory? " btn-primary" : "")
           })
}
